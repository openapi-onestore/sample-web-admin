<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "HTTP://mybatis.org/dtd/mybatis-3-config.dtd">
	
<configuration>
 
	<settings>
		<setting name="cacheEnabled" value="true"/>
		<setting name="lazyLoadingEnabled" value="true"/>
		<setting name="multipleResultSetsEnabled" value="true"/>
		<setting name="useColumnLabel" value="true"/>
		<setting name="useGeneratedKeys" value="false"/>
		<setting name="autoMappingBehavior" value="PARTIAL"/>
		<setting name="defaultExecutorType" value="SIMPLE"/>
		<setting name="jdbcTypeForNull" value="VARCHAR"/>
		<setting name="defaultStatementTimeout" value="5000" />
        <setting name="mapUnderscoreToCamelCase" value="true" />
		
		<!-- Access DB 에서는 지원하지 않음
		<setting name="defaultStatementTimeout" value="25000"/>
		  -->
	</settings>
	
	<typeAliases>
		<typeAlias type="com.skplanet.openapi.vo.FilePayment" alias="filePayment"/>
		<typeAlias type="com.skplanet.openapi.vo.PaymentJobInfo" alias="paymentJobInfo"/>
		<typeAlias type="com.skplanet.openapi.vo.FilePaymentRequest" alias="filePaymentRequest"/>
		<typeAlias type="com.skplanet.openapi.vo.NotificationResult" alias="notificationResult"/>
	</typeAliases>
	
</configuration>
